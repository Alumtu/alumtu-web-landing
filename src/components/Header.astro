---
import { Image } from "astro:assets";
import logoImg from "../assets/logo.png";
---

<header class="header">
  <div class="container">
    <nav class="nav">
      <a href="/" class="logo">
        <Image src={logoImg} alt="Alumtu" class="logo-img" loading="eager" />
        <span class="logo-text">Alumtu</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="nav-links desktop-nav">
        <a href="/" class="nav-link">Inicio</a>
        <a href="/about" class="nav-link">Acerca de</a>
        <a href="/team" class="nav-link">Equipo</a>
        <a href="/#newsletter" class="nav-link cta-button"
          >Únete a la Lista de Espera</a
        >
      </div>

      <!-- Mobile Hamburger Button -->
      <button class="hamburger" id="hamburger" aria-label="Menu">
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
      </button>

      <!-- Mobile Navigation -->
      <div class="mobile-nav" id="mobileNav">
        <div class="mobile-nav-content">
          <a href="/" class="mobile-nav-link">Inicio</a>
          <a href="/about" class="mobile-nav-link">Acerca de</a>
          <a href="/team" class="mobile-nav-link">Equipo</a>
          <a href="/#newsletter" class="mobile-nav-link mobile-cta-button"
            >Únete a la Lista de Espera</a
          >
        </div>
      </div>
    </nav>
  </div>
</header>

<style>
  .header {
    background: rgba(37, 37, 37, 0.95);
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    position: relative;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    transition: transform 0.3s ease;
    z-index: 1001;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo-img {
    height: 40px;
    width: auto;
    border-radius: 8px;
    transition: height 0.3s ease;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    transition: font-size 0.3s ease;
  }

  /* Desktop Navigation */
  .desktop-nav {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: #fff;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    position: relative;
  }

  .nav-link:not(.cta-button)::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #fff;
    transition: width 0.3s ease;
  }

  .nav-link:not(.cta-button):hover::after {
    width: 100%;
  }

  .nav-link:not(.cta-button):hover {
    color: #e5e7eb;
  }

  .cta-button {
    background: #1e3a8a;
    color: #fff !important;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(30, 58, 138, 0.3);
    border: none;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background: #1e40af;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(30, 58, 138, 0.4);
  }

  /* Hamburger Menu */
  .hamburger {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 1001;
    transition: transform 0.3s ease;
  }

  .hamburger-line {
    width: 25px;
    height: 3px;
    background-color: #fff;
    margin: 3px 0;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* Mobile Navigation */
  .mobile-nav {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100vh;
    background: rgba(37, 37, 37, 0.98);
    backdrop-filter: blur(20px);
    transition: right 0.3s ease;
    z-index: 1000;
  }

  .mobile-nav.active {
    right: 0;
  }

  .mobile-nav-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    gap: 2rem;
    padding: 2rem;
  }

  .mobile-nav-link {
    text-decoration: none;
    color: #fff;
    font-size: 1.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 1rem 0;
    text-align: center;
    width: 100%;
  }

  .mobile-nav-link:hover {
    color: #e5e7eb;
    transform: scale(1.05);
  }

  .mobile-cta-button {
    background: #1e3a8a;
    color: #fff !important;
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(30, 58, 138, 0.3);
    margin-top: 1rem;
    width: auto;
  }

  .mobile-cta-button:hover {
    background: #1e40af;
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(30, 58, 138, 0.4);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    .nav {
      padding: 0.75rem 0;
    }

    .desktop-nav {
      display: none;
    }

    .hamburger {
      display: flex;
    }

    .logo-img {
      height: 32px;
    }

    .logo-text {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 0.75rem;
    }

    .logo-img {
      height: 28px;
    }

    .logo-text {
      font-size: 1.1rem;
    }

    .mobile-nav-link {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const hamburger = document.getElementById("hamburger");
    const mobileNav = document.getElementById("mobileNav");
    const mobileNavLinks = document.querySelectorAll(".mobile-nav-link");

    if (!hamburger || !mobileNav) return;

    // Toggle mobile menu
    hamburger.addEventListener("click", function () {
      hamburger.classList.toggle("active");
      mobileNav.classList.toggle("active");

      // Prevent body scroll when menu is open
      if (mobileNav.classList.contains("active")) {
        document.body.style.overflow = "hidden";
      } else {
        document.body.style.overflow = "";
      }
    });

    // Close menu when clicking on a link
    mobileNavLinks.forEach((link) => {
      link.addEventListener("click", function () {
        hamburger.classList.remove("active");
        mobileNav.classList.remove("active");
        document.body.style.overflow = "";
      });
    });

    // Close menu when clicking outside
    mobileNav.addEventListener("click", function (e) {
      if (e.target === mobileNav) {
        hamburger.classList.remove("active");
        mobileNav.classList.remove("active");
        document.body.style.overflow = "";
      }
    });

    // Close menu on escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && mobileNav.classList.contains("active")) {
        hamburger.classList.remove("active");
        mobileNav.classList.remove("active");
        document.body.style.overflow = "";
      }
    });
  });
</script>
